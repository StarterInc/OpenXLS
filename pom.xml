							<execution>
								<id>default-javadoc</id>
								<goals>
									<goal>jar</goal>
								</goals>
								<phase>package</phase>
								<configuration>
									<encoding>ISO-8859-1</encoding>

									<subpackages>
										io.starter.OpenXLS
									</subpackages>

									<additionalparam>
										individual classes for inclusion - these have to be given 
											as source files because - there's no way to include only part of a package
										${project.build.sourceDirectory}/io/starter/formats/XLS/CellNotFoundException.java
										${project.build.sourceDirectory}/io/starter/formats/XLS/FormulaNotFoundException.java
										${project.build.sourceDirectory}/io/starter/formats/XLS/FunctionNotSupportedException.java
										${project.build.sourceDirectory}/io/starter/formats/XLS/RowNotFoundException.java
